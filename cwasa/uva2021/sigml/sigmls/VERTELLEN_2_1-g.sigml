            <handconfig extfidir="ol"/>
            <handconfig palmor="ul"/>
            <location_bodyarm location="underchin" second_location="chest" second_side="right_at"/>
            <par_motion>
                <circularmotion axis="r"/>
                <tgt_motion>
                    <tgt_motion>
                        <changeposture/>
