<?xml version="1.0" encoding="UTF-8"?>
<sigml>
  <hamgestural_sign gloss="SINT_MICHIELSGESTEL">
    <sign_nonmanual>
      <mouthing_tier>
        <mouth_picture picture="xEs@"/>
      </mouthing_tier>
    </sign_nonmanual>
    <sign_manual both_hands="true" lr_symm="true">
      <handconfig handshape="finger23" second_handshape="finger23spread" second_thumbpos="across" thumbpos="across"/>
      <split_handconfig>
        <handconfig extfidir="uo" palmor="l" second_extfidir="l"/>
        <handconfig extfidir="or" palmor="r"/>
      </split_handconfig>
      <handconstellation contact="close">
        <location_hand digits="2" location="midjoint" side="right_beside"/>
        <location_hand digits="3" location="midjoint" side="right_beside"/>
        <location_bodyarm contact="close" location="shoulders" second_location="chest"/>
      </handconstellation>
      <rpt_motion repetition="fromstart_several">
        <tgt_motion>
          <split_motion>
            <par_motion>
              <directedmotion direction="d"/>
              <tgt_motion>
                <changeposture/>
                <handconfig extfidir="ol"/>
              </tgt_motion>
            </par_motion>
            <nomotion/>
          </split_motion>
          <handconstellation contact="touch">
            <location_hand digits="2" location="midjoint" side="right_beside"/>
            <location_hand digits="3" location="nail" side="right_beside"/>
          </handconstellation>
        </tgt_motion>
      </rpt_motion>
    </sign_manual>
  </hamgestural_sign>
</sigml>
