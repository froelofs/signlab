            <handconfig extfidir="u"/>
            <handconfig palmor="d"/>
            <location_bodyarm location="head" second_location="head" second_side="right_at" side="right_beside"/>
            <directedmotion direction="o" size="small" slow="true"/>
            <par_motion>
                <directedmotion direction="d" size="big"/>
                <tgt_motion>
                    <changeposture/>
                    <handconfig handshape="finger2" specialfingers="5" thumbpos="out"/>
