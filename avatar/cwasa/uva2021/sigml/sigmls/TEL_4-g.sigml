<?xml version="1.0" encoding="utf-8"?>
<sigml>
    <hamgestural_sign gloss="TEL_4">
        <sign_manual both_hands="true" lr_symm="true">
            <split_handconfig>
                <handconfig handshape="finger2" mainbend="round" second_handshape="finger2" second_thumbpos="across" thumbpos="across"/>
                <handconfig handshape="finger23spread" specialfingers="2345" thumbpos="across"/>
            </split_handconfig>
            <split_handconfig>
                <handconfig extfidir="ul" palmor="l" second_extfidir="o"/>
                <handconfig extfidir="ur" palmor="r"/>
            </split_handconfig>
            <split_location>
                <location_hand contact="touch" digits="5" location="tip">
                    <location_hand digits="2" location="tip"/>
                </location_hand>
                <location_bodyarm contact="close" location="shoulders" second_location="shoulders" side="left_at"/>
            </split_location>
            <rpt_motion repetition="fromstart_several">
                <split_motion>
                    <par_motion>
                        <directedmotion direction="r" size="small"/>
                        <tgt_motion>
                            <changeposture/>
                            <handconfig handshape="finger2" thumbpos="across"/>
                        </tgt_motion>
                    </par_motion>
                    <nomotion/>
                </split_motion>
            </rpt_motion>
        </sign_manual>
        <sign_nonmanual>
            <body_tier>
                <body_movement movement="ST"/>
            </body_tier>
            <facialexpr_tier>
                <eye_brows movement="RB"/>
            </facialexpr_tier>
        </sign_nonmanual>
    </hamgestural_sign>
</sigml>